{$R *.fmx}

uses MainMenu;

procedure TField.FormCloseQuery(Sender: TObject; var CanClose: Boolean);
begin
    PlaySound(0, 0, SND_PURGE);
    StartMenu.Show;
    PlaySound('Audio\Menu.wav', 0, SND_ASYNC or SND_LOOP);
end;

end.
