unit Game;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.Ani,
  FMX.Objects, Mmsystem;

type
  TField = class(TForm)
    Image1: TImage;
    Pac: TImage;
    PacMoveAnimation: TFloatAnimation;
    PacAnimation: TBitmapListAnimation;
    procedure FormCloseQuery(Sender: TObject; var CanClose: Boolean);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Field: TField;

implementation

{$R *.fmx}

uses MainMenu;

procedure TField.FormCloseQuery(Sender: TObject; var CanClose: Boolean);
begin
    PlaySound(0, 0, SND_PURGE);
    StartMenu.Show;
    PlaySound('Audio\Menu.wav', 0, SND_ASYNC or SND_LOOP);
end;

end.
