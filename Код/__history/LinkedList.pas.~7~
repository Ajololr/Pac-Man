unit LinkedList;

interface

type
    PNode = ^TNode;
    TNode = record
        Name: String;
        Value: SmallInt;
        Next: PNode;
    end;

    TMyList = class
        Head: PNode;
        constructor Create;
        //destructor Destroy;
        procedure Add(Item: TNode);
       // procedure Delete(Item: TNode);
        procedure Sort;
    end;

implementation

constructor TMyList.create;
begin
    Head := nil;
end;

procedure TMyList.Add(Item: TNode);
var
    Temp: PNode;
begin
    New(Temp);
    Temp^.Name := Item.Name;
    Temp^.Value := Item.Value;
    Temp^.Next := Head;
    Head := Temp;
end;

procedure TMyList.Sort;
var
    Temp, Pointer: PNode;
begin
    Temp := Head;
    while Temp^.Next <> nil do
        while Pointer^.Next <> nil do
        begin
            if Pointer^.Value < Pointer^.Next^.Value then
            begin
               // Temp :=
            end;
        end;
end;

end.